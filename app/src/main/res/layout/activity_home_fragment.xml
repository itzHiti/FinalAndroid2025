<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_doner">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <!--Logo + profile-->
        <include layout="@layout/toolbar_home" />

        <!--категории-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:gravity="center"
            android:layout_marginTop="10dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/doners_category"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Doners"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="#000000"
                app:backgroundTint="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/drinks_category"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Drinks"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginEnd="8dp"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="#000000"
                app:backgroundTint="@color/white"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/sauces_category"
                android:layout_width="0dp"
                android:layout_height="36dp"
                android:layout_weight="1"
                android:text="Sauces"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#000000"
                app:cornerRadius="16dp"
                app:strokeWidth="1dp"
                app:strokeColor="#000000"
                app:backgroundTint="@color/white"/>
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productsRecycler"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginTop="10dp"/>

    </LinearLayout>



    <!-- корзинка -->
    <LinearLayout
        android:id="@+id/btnBasket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:background="@drawable/bg_basket_floating"
        android:elevation="10dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@android:drawable/ic_menu_agenda"
            app:tint="#FFFFFF"/>

        <TextView
            android:id="@+id/tvBasketPrice"
            android:layout_marginStart="8dp"
            android:text="0 ₸"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</FrameLayout>
